#!/usr/bin/env bash

# Update dotfiles directory and
# run dotdrop update

dotfiles="$HOME/dotfiles"

echo "Syncing dotfiles repo... "
git -C "$dotfiles" pull &&
    git -C "$dotfiles" add -A &&
    git -C "$dotfiles" commit &&
    git -C "$dotfiles" push
echo "Running dotdrop install ... "
dotdrop -c ~/dotfiles/config.yaml install
