# Sorin theme
# Default values
# Inspired by Pure theme https://github.com/rafaelrinaldi/pure

# Symbols
_sorin_set_default sorin_symbol_prompt '❯ '
_sorin_set_default sorin_symbol_git_added '✚'
_sorin_set_default sorin_symbol_git_ahead '⇡'
_sorin_set_default sorin_symbol_git_behind '⇣'
_sorin_set_default sorin_symbol_git_clean '✔'
_sorin_set_default sorin_symbol_git_deleted '✖'
_sorin_set_default sorin_symbol_git_modified '✱'
_sorin_set_default sorin_symbol_git_renamed '➜'
_sorin_set_default sorin_symbol_git_separator '|'
_sorin_set_default sorin_symbol_git_stashed '✭'
_sorin_set_default sorin_symbol_git_unmerged '═'
_sorin_set_default sorin_symbol_git_untracked '…'

# Colors
_sorin_set_default sorin_color_red (set_color brred)
_sorin_set_default sorin_color_green (set_color green)
_sorin_set_default sorin_color_blue (set_color brblue)
_sorin_set_default sorin_color_yellow (set_color yellow)
_sorin_set_default sorin_color_cyan (set_color cyan)
_sorin_set_default sorin_color_gray (set_color 6c6c6c)
_sorin_set_default sorin_color_normal (set_color normal)
_sorin_set_default sorin_color_magenta (set_color brmagenta)
_sorin_set_default sorin_color_white (set_color white)

_sorin_set_default sorin_username_color $sorin_color_yellow
_sorin_set_default sorin_host_color $sorin_color_gray
_sorin_set_default sorin_root_color $sorin_color_red
_sorin_set_default sorin_virtualenv_color $sorin_color_gray
_sorin_set_default sorin_pwd_color $sorin_color_yellow
_sorin_set_default sorin_prompt_color $sorin_color_green
