#!/usr/bin/env python3
import os
import hashlib
import sys
from pprint import pprint


def hash_dir(dir_path):
    sha = hashlib.sha1()
    for entry in os.scandir(dir_path):
        if entry.is_file():
            sha.update(entry.name.encode())
    return sha.hexdigest()


if __name__ == "__main__":
    print(hash_dir(sys.argv[1]))
