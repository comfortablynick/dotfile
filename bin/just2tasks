#!/usr/bin/env python3
"""Add justfile actions to .tasks file for AsyncTasks vim plugin."""

from subprocess import run
from textwrap import dedent
import datetime
import re
import sys

tasks = run(["just", "-l"], capture_output=True).stdout.decode().split("\n")[1:]
collected = []
for t in tasks:
    if t != "" and "alias" not in t:
        t = t.lstrip()
        matches = re.match(r"^(\w+)(?:.*# )?(.*$)", t)
        if matches is not None:
            collected.append(matches.group(1))
output = [
    "; vim:set fenc=utf-8 ft=dosini:",
    f"; written with just2tasks: {datetime.datetime.now().strftime('%c')}",
    "",
]
for cmd in collected:
    block = dedent(
        f"""\
    [{cmd}]
    command=just {cmd}
    cwd=<root>
    output=terminal
    save=1
    """
    )
    output.append(block)

try:
    if (file := sys.argv[1]) != "justfile":
        with open(file, "w") as f:
            f.write("\n".join(output))
        print(f"Wrote {len(output)} commands from justfile to {file}")
    else:
        print("'justfile' may overwrite the source file! Aborting.", file=sys.stderr)
        sys.exit(1)
except IndexError:
    print(*output, sep="\n")
